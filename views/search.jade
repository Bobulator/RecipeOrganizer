extends ./homelayout.jade
    
block title
  title Advanced Search

block searchlink
  li.active
    a(href='/search') 
      | Advanced Search
      span.sr-only (current)

block content
  .modal-body.row
    // Left column
    .col-md-4.col-md-offset-1
      .row
        .col-md-10.col-md-offset-2 Please fill in one or more of the following search criteria:
      .row
        form.form-horizontal
          .form-group
            label.col-sm-2.control-label(for='inputTitle') Title
            .col-sm-10
              input#inputTitle.form-control(type='input')
          .form-group
            label.col-sm-2.control-label(for='inputIngredient') Ingredient
            .col-sm-10
              input#inputIngredient.form-control(type='input')
          .form-group
            label.col-sm-2.control-label(for='inputTheme') Theme
            .col-sm-10 
              input#inputTheme.form-control(type='input')
          .form-group
            .col-sm-offset-5.col-sm-4
              button.btn.btn-default.btn-block(type='submit') Search

    // Right column
    .col-md-6
      | Results go here
    // Right padding
    .col-md-1
