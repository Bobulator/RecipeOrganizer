extends ./homelayout.jade
    
block title
  title Advanced Search

block searchlink
  li.active
    a(href='/search') 
      | Advanced Search
      span.sr-only (current)

block content
  
  h2
    .col-md-2
    | Advanced Search

  .modal-body.row
    // Left column
    .col-md-4.col-md-offset-1
      .row
        form#searchForm.form-horizontal
          .form-group
            label.col-sm-3.control-label(for='inputTitle') Title
            .col-sm-9
              input#inputTitle.form-control(name='title', type='input')
          .form-group
            label.col-sm-3.control-label(for='inputIngredient') Ingredient
            .col-sm-9
              input#inputIngredient.form-control(name='ingredient', type='input')
          .form-group
            label.col-sm-3.control-label(for='inputTheme') Theme
            .col-sm-9
              input#inputTheme.form-control(name='theme', type='input')
          .form-group
            .col-sm-offset-5.col-sm-4
              button#searchButton.btn.btn-default.btn-block(type='button') Search

    // Right column
    .col-md-6
      .row
        .recipeCells
        #cellTemplate.hide(_id='temp')
          .col-md-6
            .thumbnail
              img.recipeImage(src='images/320x150', alt='No Image')
              .caption
                h4.title Recipe Title
                p.description Description
                //.row
                //  h4.theme.pull-right Theme!
    // Right padding
    .col-md-1
  
  #recipeModal.modal
    .modal-dialog
      .modal-header
        button.close(type='button', data-dismiss'modal', aria-hidden='true') x
        h3.modal-title Modal Title
        p.modal-description Description
        p.modal-them Theme
      .container
      .modal-body
        h4 Ingredients
        ul.modal-ingredients
        br
        h4 Instructions
        ol.modal-instructions(type='1')
        h4 Notes
        p.modal-notes Notes
      .modal-footer
        a.btn(href='#', data-dismiss='modal') Close

  script(src='/javascripts/search.js')
