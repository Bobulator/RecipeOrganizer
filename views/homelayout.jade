doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    block title
      title Bootstrap 101 Template
    // Bootstrap
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    h1(style='padding-left:130px;') Recipe Organizer
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='/js/bootstrap.min.js')
    
    nav.navbar.navbar-inverse(role='navigation', style='padding-left:130px; padding-right:130px;')
      ul.nav.navbar-nav
        block homelink
          li
            a(href='/home') Home
        block shoppinglink
          li
            a(href='/shopping') Shopping List
        block searchlink
          li
            a(href='/search') Advanced Search
        block createlink
          li
            a(href='/create') Create Recipe
        block helplink
          li
            a(href='/help') Help

      ul.nav.navbar-nav.navbar-right
        li
          a(href='/logout') Sign Out
