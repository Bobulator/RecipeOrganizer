extends ./homelayout.jade
    
block title
  title Home

block homelink
  li.active
    a(href='/home')
      | Home
      span.sr-only (current)

block content

  script(type='text/javascript').
    var userRecipes = !{recipes};

  h2
    .col-md-2
    | Your Recipes

  .modal-body.row
    // Left column
    .col-md-1.col-md-offset-1
      .row
        form#searchForm
          .form-group
            label.control-label(for='quickSearch') Quick Search
            input#quickSearch.form-control(name='search', type='input')
          .form-group
            button.btn.btn-default.btn-block Search

    // Central/Main column
    .col-md-9
      .row
        .recipeCells
          
        #cellTemplate.hide(_id='temp')
          .col-md-3 
            .thumbnail
              img.recipeImage(src='images/320x150', alt='No Image')
              .caption
                h4.title Recipe Title!
                p.description Description of A Recipe!!
                //.row
                //  h4.theme.pull-right Theme!
      // Right padding
      .col-md-1

  #recipeModal.modal
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') x
          h3.modal-title Modal Title
          p.modal-description Description
          p.modal-theme Theme
        .container
        .modal-body
          h4 Ingredients
          ul.modal-ingredients
          br
          h4 Instructions
          ol.modal-instructions(type='1')
          h4 Notes
          p.modal-notes Notes
        .modal-footer
          a.btn(href='#', data-dismiss='modal') Close
          a.btn.btn-default(href='#') Save
  
  script(src='/javascripts/home.js')
